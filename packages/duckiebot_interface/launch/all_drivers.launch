    <!-- Fligth Controller -->
    <group if="$(eval arg('robot_type') == 'duckiedrone')">
        <include file="$(find flight_controller)/launch/flight_controller.launch">
            <arg name="veh" value="$(arg veh)"/>
            <arg name="robot_type" value="$(arg robot_type)"/>
        </include>
    </group> 

</launch>
